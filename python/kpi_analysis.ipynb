import pandas as pd

# Load data
df = pd.read_csv("sales_data.csv")

# Revenue KPI
total_revenue = df['order_amount'].sum()

# Average Order Value
aov = df['order_amount'].mean()

# Monthly Growth
df['month'] = pd.to_datetime(df['order_date']).dt.month
monthly_sales = df.groupby('month')['order_amount'].sum()

total_revenue, aov, monthly_sales
